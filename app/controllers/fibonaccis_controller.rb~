class FibonaccisController < ApplicationController

  def show
    
  end

  def create
    @fibo ||= {}

    @fibo[:cassiano] = begin
                        Fibonacci.cassiano(params[:n].to_i)
                      rescue Exception => e
                        e.message  
                      end

    @fibo[:gustavo] =  begin 
                        Fibonacci.gustavo(params[:n].to_i)
                       rescue Exception => e
                        e.message
                       end

    respond_to do |format|
      format.js
    end
  end


end
